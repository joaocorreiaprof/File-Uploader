<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Library</title>
    <link rel="stylesheet" href="/styles/index.css" />
  </head>
  <body>
    <header>
      <div class="header-left">
        <p>File Uploader</p>
      </div>
      <div class="header-right">
        <div class="user-profile">
          <div class="avatar"><%= user.username.charAt(0) %></div>
          <span class="username">@<%= user.username %></span>
        </div>
        <a href="/log-out" class="logged-in">LOG OUT</a>
      </div>
    </header>
    <div class="main-content">
      <h1>Welcome, <%= locals.user.username %>!</h1>
      <div class="user-library">
        <form action="/create-folder" method="POST">
          <input
            type="text"
            name="folderName"
            placeholder="New Folder Name"
            required
          />
          <button type="submit" class="folder-submit-button">
            Create Folder
          </button>
        </form>
        <h2>Your Folders</h2>
        <table class="folders-table">
          <thead>
            <tr>
              <th>Folder Name</th>
              <th>Size</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
            <% if (folders && folders.length > 0) { %> <%
            folders.forEach(function(folder) { %>
            <tr>
              <td><%= folder.name %></td>
              <td></td>
              <td><%= folder.createdAt %></td>
              <td><%= folder.updatedAt %></td>
              <td>
                <button class="edit-btn">Edit</button>
                <button class="delete-btn">Delete</button>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="4">No folders found.</td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <footer>
      <div class="footer-content">
        <p>&copy; 2025 File Uploader. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
